<div class="cover-show mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1><%= @hotel_room.name %></h1>
  </div>
</div>
  <div class="grid-card">
  <div class="card-show">
    <div class="card-product-infos">
      <div class="notification">
        <div class="notification-content">
          <p><small>Price</small></p>
    <p> The price of our exceptionnal <%= @hotel_room.name %> is <span><%= @hotel_room.price %></span> <span>$ /night</span>.
      The is fulli quiped for two adults in a max king size bed. The access to our SPA & the breakfast in our luxury restaurant are included.</p>
        </div>
      </div>
      <div class="notification">
        <div class="notification-content">
        <p><small>Description</small></p>
        <p><%=@hotel_room.description%></p>
        </div>
      </div>
  </div>
  </div>
      <div class="card-show">
      <div class="notification">
      <div class="notification-content">
        <p><small>Booking options</small></p>
          <%= simple_form_for [@hotel_room, @booking] do |f|%>
            <div class="booking-form">
              <%= f.input :start_date, as: :date, html5: true, label: 'FROM' %>
              <%= f.input :end_date, as: :date, html5: true, label: 'TO' %>
            </div>
            <%= f.submit 'Book now', class: "btn btn-primary book"%>
            <br>
          <% end %>
      </div>
    </div>
        </div>
    </div>
  </div>
</div>
