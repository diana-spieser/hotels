
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Your bookings</h1>
  </div>
</div> <%= link_to "← Back", root_path, class:"text-decoration-none text-dark ms-5 " %>

       <% @bookings.each do |booking| %>
      <table class="table">
        <thead>
           <tbody class="table-group-divider">
          <tr>
            <th scope="col"></th>
          <th scope="col"> Booking details:</th>
          </tbody>
          </tr>
        </thead>
          <tbody class="table-group-divider">
          <tr>
            <th scope="row">Hotel room name:</th>
            <td><%= booking.hotel_room.name %></td>
        </tr>
          <tr>
            <th scope="row">From:</th>
            <td><%= booking.start_date %></td>
          </tr>
        <tr>
            <th scope="row">To:</th>
            <td><%= booking.end_date %></td>
        </tr>
        <tr>
            <th scope="row">Description:</th>
            <td><%= booking.hotel_room.description %></td>
        </tr>
        <tr>
            <th scope="row">TOTAL (INC.TAXES):</th>
            <td colspan="2">$<%= (booking.end_date - booking.start_date).to_i * booking.hotel_room.price %></td>
        </tr>
        </tbody>
    </table>

   <center><%= link_to 'Modify your booking',  edit_booking_path(booking), class: "btn btn-primary" %>
    <%= link_to "Cancel your booking", destroy_booking_path(booking), method: :delete, class: "btn btn-primary"%></center>
         <br>
   <br>
   <% end %>
